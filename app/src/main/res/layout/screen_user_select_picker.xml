<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.emilochhektor.quizcous.UserSelectionActivity"
    android:background="@color/app_primary"
    android:id="@+id/screen_user_select_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quizcous"
        android:id="@+id/textView3"
        android:textSize="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:id="@+id/screen_user_select_btn_prevcolor"
        android:background="@drawable/arrow_left"
        android:src="@drawable/arrow_left"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:id="@+id/screen_user_select_btn_nextcolor"
        android:background="@drawable/arrow_left"
        android:rotation="180"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:id="@+id/screen_user_select_checkbox_ready"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/screen_user_select_picker_2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/screen_user_select_picker_1"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/screen_user_select_picker_2"
        android:layout_toStartOf="@+id/screen_user_select_picker_2" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/screen_user_select_picker_3"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/screen_user_select_picker_2"
        android:layout_toEndOf="@+id/screen_user_select_picker_2" />

</RelativeLayout>
